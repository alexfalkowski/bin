#!/usr/bin/env bash
# shellcheck disable=SC2086 disable=SC2155

set -eo pipefail

readonly message=$(git log --pretty=format:"%s" -n 1)

if [[ "$message" =~ ^chore* ]]; then
  readonly name="$1"
  readonly latest_tag="$(git tag | sort -V | tail -1)"
  readonly dir="$(dirname "$(readlink -f "$0")")"

  # Build and push docker.
  docker build --build-arg name=$name --build-arg version=$latest_tag -t alexfalkowski/$name -t alexfalkowski/$name:$latest_tag -f $dir/go/Dockerfile --push .
fi
